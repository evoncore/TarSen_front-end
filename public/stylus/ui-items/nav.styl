

#context-menu
  opacity 0
  height 0
  position absolute
  text-align center
  z-index -1
  left -54px
  top 0
  height 100%
  text-align center
  ul
    position fixed
    box-shadow: 0 0 5px rgba(0,0,0,.6),
                0 1px 0 (#333 / 2), 
                0 2px 0 (#333 / 2)
    & .before
      content ''
      display block
      position absolute
      left -3px
      width 3px
      height 52px
      z-index 2
      background $mc
      transition .3s
      bs_pattern(($mc / 2))
    li
      display block
    a
      display block
      background #333
      color #fff
      padding 15px 18px
      transition()
      position relative
      &.active
        color $mc
        &:before
          ts_pattern(($mc / 2))
      &:before
        font-size 16px
        text-shadow: 0 1px 0 #888, 
                     0 2px 0 #777
      &:hover
        color $mc
        &:before
          ts_pattern(($mc / 2))
        i
          opacity 1
          color #fff
      i
        display inline-block
        font-style normal
        position absolute
        background #555
        padding 16px
        top 0
        left 57px
        display none
        opacity 0
        letter-spacing 1px
        font-family $mf, $af
        max-width 120px
        bs_pattern((#555 / 2))
        &.align-left
          right 57px
          left auto
        &.align-right
          left 57px
          right auto
  &.show
    opacity 1
    z-index 9998
    height auto
    